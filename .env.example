# Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=
USE_X_FORWARDED_PROTO=True
SERVE_MEDIA=False
LOG_LEVEL=INFO

# Docker/compose
MICHAELLOBMAPP_IMAGE=michaellobmapp:latest
DJANGO_SECRET_KEY=your-production-secret-key-here
SA_PASSWORD=your-sqlserver-sa-password

# Database engine
DB_ENGINE=sqlite
SQLITE_NAME=db.sqlite3

# MSSQL (use when DB_ENGINE=mssql)
DB_HOST=sqlserver
DB_PORT=1433
DB_NAME=michaellobmdb
DB_USER=sa
DB_PASSWORD=your-sqlserver-sa-password
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_ENCRYPT=yes
DB_TRUST_SERVER_CERTIFICATE=yes

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_SUCCESS_URL=http://localhost:8000/sales/payment-success/
